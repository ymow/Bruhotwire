<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!--
            Icon when menu is closed.

            Heroicon name: outline/menu

            Menu open: "hidden", Menu closed: "block"
          -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!--
            Icon when menu is open.

            Heroicon name: outline/x

            Menu open: "block", Menu closed: "hidden"
          -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to "/" do %>
            <img class="block h-8 w-auto" src="https://scontent.ftpe8-1.fna.fbcdn.net/v/t39.30808-6/302003947_395915885990614_3442569296214181893_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=lFoBeV3LXuwAX_VfoL4&_nc_ht=scontent.ftpe8-1.fna&oh=00_AfAYfzpP0PFpJuTkMJORg7LKnQTwJcSsKWS6GIr2imvBSA&oe=646B203D" alt="Brubecker">
          <% end %>
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <%= link_to "Posts", posts_path, class: "hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium #{ current_page?(posts_path) ? 'bg-gray-900 text-white' : 'text-gray-300' }" %>
            <%= link_to "Tasks", tasks_path, class: "hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium #{ current_page?(tasks_path) ? 'bg-gray-900 text-white' : 'text-gray-300' }" %>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center space-x-4 pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <% if user_signed_in? %>
          <%= link_to notifications_path, class: "flex items-center bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>
            <span class="sr-only">View notifications</span>
            <%= heroicon "bell", variant: :outline, options: { class: "h-6 w-6" } %>
            <%= tag.div id: :notifications_count do %>
              <%= render "notifications/count", count: current_user.unviewed_notifications_count %>
            <% end %>
          <% end %>

          <%= link_to destroy_user_session_path, class: "bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>
            <span class="sr-only">Sign out</span>
            <%= heroicon "logout", variant: :outline, options: { class: "h-6 w-6" } %>
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path, class: "bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>
            <span class="sr-only">Sign up</span>
            <%= heroicon "user-add", variant: :outline, options: { class: "h-6 w-6" } %>
          <% end %>
          <%= link_to new_user_session_path, class: "bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>
            <span class="sr-only">Sign in</span>
            <%= heroicon "login", variant: :outline, options: { class: "h-6 w-6" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= link_to "Posts", posts_path, class: "hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium #{ current_page?(posts_path) ? 'bg-gray-900 text-white' : 'text-gray-300' }" %>
    </div>
  </div>
</nav>